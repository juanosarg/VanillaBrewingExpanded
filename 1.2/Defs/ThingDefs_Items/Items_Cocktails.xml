	<HediffDef>
		<defName>VBE_ConsumedCocktail</defName>
		<label>consumed cocktail</label>
		<labelNoun>a cocktail drink</labelNoun>
		<description>Consumed a nice cocktail. Has a chance to provide a random inspiration.</description>
		<hediffClass>VanillaBrewingExpanded.Hediff_ConsumedCocktail</hediffClass>
		<defaultLabelColor>(1,0,0.5)</defaultLabelColor>
		<scenarioCanAdd>true</scenarioCanAdd>
		<isBad>false</isBad>
		<comps>

			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-0.2</severityPerDay>
				<showHoursToRecover>true</showHoursToRecover>
			</li>
		</comps>
		<stages>
			<li/>

		</stages>
	</HediffDef>



